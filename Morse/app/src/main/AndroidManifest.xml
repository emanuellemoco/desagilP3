<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.pro.hashi.ensino.desagil.morse">
    <!-- Se esquecer esta tag, o aplicativo explode ao tentar pedir permissÃ£o. -->
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/morse"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/morse"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Contatos_Send"></activity>
        <activity android:name=".MesagesActivity"></activity>
        <activity
            android:name=".MorseActivity"
            android:label="@string/title_activity_morse"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>