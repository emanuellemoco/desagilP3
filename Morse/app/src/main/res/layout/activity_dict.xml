    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dictionary"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dict1Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dicionário a Partir do Alfabeto:"/>

    <TextView
        android:id="@+id/dictFromABC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/dict2Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dicionário a Partir do Morse:"/>

    <TextView
        android:id="@+id/dictFromMorse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>